---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<title>Portfolio Nahuel</title>
		<link rel="icon" type="logo/png" href="/logo.png"/>
		<meta name="description" content="Portfolio web personal" />
		<link rel="stylesheet" href="/styles/global.css">

		<!-- Og card -->
		<meta property="og:title" content="Portfolio Nahuel" />
		<meta property="og:description" content="Portfolio web personal" />
		<meta property="og:image" content="https://portfolionahuel.com/assets/images/portfolio.png" />
		<meta property="og:url" content="https://portfolionahuel.com/" />
		<meta property="og:locale" content="es_ES" />

		<!-- Twitter Card -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:site" content="@NahuelAdema" />
		<meta name="twitter:creator" content="@NahuelAdema" />
		<meta name="twitter:title" content="Portfolio Nahuel" />
		<meta name="twitter:description" content="Portfolio web personal" />
        
	</head>
	<body>
		<Header/>
		<slot /> <!-- Se renderiza la ruta que vamos viendo -->
		<Footer/>

	</body>
</html>

<style>
	html,
	body {
		
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
